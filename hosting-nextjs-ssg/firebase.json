{
  "hosting": {
    "site": "nextjs-ssg",
    "public": "out",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**/**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "firbease-debug.log",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
